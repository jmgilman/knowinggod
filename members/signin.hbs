<!DOCTYPE html>
<html lang="{{@site.lang}}">
<head>
	{{!-- Document Settings --}}
	<meta charset="utf-8">

	{{!-- Page Meta --}}
	<title>{{@site.title}} â€” {{t "Sign In"}}</title>
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />

	{{!-- Styles --}}
	{{> custom-fonts}}
	<link rel="stylesheet" type="text/css" href="{{asset "css/style.css"}}" />
	{{#if @site.cover_image}}
		{{> site-cover image=@site.cover_image}}
	{{/if}}

	{{ghost_head}}
</head>
<body class="special-template">

	{{#if @member}}

	{{!-- Logged in: Redirect home --}}
	<script>window.location = '{{@site.url}}';</script>

	{{else}}

	<div id="page" class="site">
		<main class="site-main site-signin">
			<nav class="top-navigation">
				<a class="button white" href="{{@site.url}}">{{{t "Back to homepage"}}}</a>
			</nav>
			<div class="site-content site-signin inner">
				<header class="page-header">
					<h1 class="page-title">{{t "Welcome Back!"}}</h1>
					<p class="page-description">{{t "Sign in to your account to access premium content."}}</p>
				</header><!-- .page-header -->
				<div class="page-content">
					{{> "member-signin-form"}}
				</div><!-- .page-content -->
			</div><!-- .site-content -->
		</main><!-- .site-main -->
	</div><!-- .site -->

	{{/if}}

</body>
</html>
