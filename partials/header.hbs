<header class="site-header">
	<div class="inner-wide">
		<div class="site-header-inside">

			<div class="site-branding">
				{{#if @site.logo}}
				<p class="site-logo"><a href="{{@site.url}}"><img src="{{@site.logo}}" alt="{{@site.title}}" /></a></p>
				{{/if}}
				{{#is "index"}}
				<h1 class="site-title"><a href="{{@site.url}}">{{@site.title}}</a></h1>
				{{else}}
				<p class="site-title"><a href="{{@site.url}}">{{@site.title}}</a></p>
				{{/is}}
			</div><!-- .site-branding -->

			<nav class="site-navigation">
				{{!-- The tag below includes the navigation menu - partials/navigation.hbs --}}
				{{navigation}}
				<ul class="actions">
					{{!-- If members enabled, show the login panel --}}
					{{#if @labs.members}}
					<li class="actions-item">
						<button id="login-toggle" class="login-toggle">{{> "icons/user"}}</button>
						<ul class="site-login">
							{{#if @member}}
							<li class="account-link"><a class="button" href="{{@site.url}}/account/">{{t "View Account"}}</a></li>
							<li class="signout-link"><a class="button" href="#signout" data-members-signout>{{t "Sign out"}}</a></li>
							{{else}}
							<li class="signin-link"><a class="button" href="{{@site.url}}/signin/">{{t "Sign in"}}</a></li>
							<li class="signup-link"><a class="button" href="{{@site.url}}/signup/">{{t "Sign up"}}</a></li>
							{{/if}}
						</ul><!-- .site-login -->
						<div class="login-overlay"></div>
					</li>
					{{/if}}
					<li class="actions-item">
						<button id="search-show" class="search-toggle"><span class="screen-reader-text">{{t "Show Search"}}</span>{{> "icons/search"}}</button>
					</li>
					<li class="actions-item">
						<button id="sidebar-show" class="sidebar-toggle"><span class="screen-reader-text">{{t "Show Sidebar"}}</span><span class="icon-nav" aria-hidden="true"></span></button>
					</li>
				</ul><!-- .actions -->
			</nav><!-- .site-navigation -->
		</div><!-- .site-header-inside -->
	</div><!-- .inner-wide -->
</header><!-- .site-header -->
