{{!< default}}
{{!-- The tag above means - insert everything in this file into the {body} of the default.hbs template --}}

{{!-- The content area on the static page --}}
<main class="site-main">
	<div class="site-content site-membership">

		{{!-- Everything inside the #post tags pulls data from the post --}}
		{{#post}}

		<header class="page-header inner">
			<h1 class="page-title">{{title}}</h1>
			{{#if custom_excerpt}}
				<p class="page-description">{{custom_excerpt}}</p>
			{{/if}}
		</header><!-- .page-header -->

		<div class="page-content">
			<div class="membership-box inner-wide">
				<h2 class="membership-box-title">{{t "Choose your subscription"}}</h2>
				<div class="membership-plans">
					{{> "membership-free"}}
					{{> "membership-monthly"}}
					{{> "membership-yearly"}}
				</div><!-- membership-plans -->
			</div><!-- membership-box -->
			<div class="inner">
				{{content}}
			</div><!-- .inner -->
		</div><!-- .page-content -->

		{{/post}}

	</div><!-- .site-content -->
</main><!-- .site-main -->
