<!DOCTYPE html>
<html lang="{{@site.lang}}">
<head>
	{{!-- Document Settings --}}
	<meta charset="utf-8">

	{{!-- Page Meta --}}
	<title>{{@site.title}} â€” {{statusCode}}</title>
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />

	{{!-- Styles --}}
	{{> custom-fonts}}
	<link rel="stylesheet" type="text/css" href="{{asset "css/style.css"}}" />
	{{#if @site.cover_image}}
		{{> site-cover image=@site.cover_image}}
	{{/if}}

</head>
<body class="special-template">

	<div id="page" class="site">
		<main class="site-main">
			<div class="site-content site-error inner">
				<header class="page-header">
					<h1 class="page-title">{{statusCode}}</h1>
					<p class="page-description">{{message}}</p>
				</header><!-- .page-header -->
				<div class="page-content">
					<p><a class="button white" href="{{@site.url}}">{{{t "Back to homepage"}}}</a></p>
				</div><!-- .page-content -->
			</div><!-- .site-content -->
		</main><!-- .site-main -->
	</div><!-- .site -->

</body>
</html>
